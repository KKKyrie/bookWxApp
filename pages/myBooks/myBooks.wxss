/* pages/myBooks/myBooks.wxss */
.book-container {
	display: flex;
	box-sizing: border-box;
	flex-direction: row;
	flex-wrap: wrap;
	/*justify-content: space-between;*/
	align-content: space-between;
	/*border: 1px solid black;*/

	padding: 50rpx 0;
}

.book {
	margin: 0 18rpx;
	margin-bottom: 50rpx;
	width: 208rpx;
	height: 380rpx;
	border: 1px solid #cdcdcd;

	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.book-image {
	width: 100%;
	height: 300rpx;
	border: 1px solid yellow;

}

.book-name {
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}