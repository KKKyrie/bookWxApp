<view class="swiper-container">

	<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" class="swiper" previous-margin="{{sideMargin}}" next-margin="{{sideMargin}}">

 		<block wx:for="{{bookList}}" wx:key="index">

 			<swiper-item class="swiper-item">

 				<view class="book-container bg-white" hover-class="book-container-hover" catchtap="goDetail">
 					
 					<view class="book-image"> 
 						<image src="{{item.imgUrl}}" mode="scaleToFill"></image>
 					</view>

 					<view class="book-info">
 						<text class="book-name">{{item.bookName}}</text>
 						<text class="author">{{item.author}}</text>
 						<text class="publisher">{{item.publisher}}</text>
 					</view>
					

 				</view>

 			</swiper-item>

		</block>

	</swiper>

</view>


